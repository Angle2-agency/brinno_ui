@rendermode InteractiveServer
@page "/"

<PageTitle>Welcome</PageTitle>

<div class="main-content">
    <div class="d-flex flex-column gap-5 text-center py-5">
        @* Typography *@
        <Typography />

        @* Shadows *@
        <section>
            <h3>Shadows</h3>
            <ul class="shadow-list">
                <li class="shadow-sm rounded-4"></li>
                <li class="shadow rounded-4"></li>
                <li class="shadow-lg rounded-4"></li>
            </ul>
        </section>

        @* Buttons *@
        <Buttons />

        @* Inputs *@
        <Inputs />

        @* DropDown *@
        <div class="d-flex gap-2 w-50 mx-auto">
            <ComboBox />
            <DropDownBox />
        </div>

        @* Checkboxes and Radios *@
        <div class="d-flex gap-2 w-50 mx-auto">
            <CheckBoxes />
            <Radios />
        </div>

        <Switchers />


    </div>
</div>
